/* 全局样式 */
page {
  background-color: #f9f9f9;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
}
.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

/* 容器样式 */
.container {
  padding: 60rpx 40rpx;
}

