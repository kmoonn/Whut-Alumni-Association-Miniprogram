/* 校友信息样式 */
.alumnus-info {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 50rpx;
}

/* 信息项样式 */
.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.label {
  width: 240rpx;
  font-size: 40rpx;
  color: #555;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.value {
  font-size: 36rpx;
  color: #333;
  flex: 1;
  line-height: 1.7;
}

/* 企业简介文本样式 */
.company-info-text {
  font-size: 32rpx;
  white-space: pre-wrap;
}