.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

/* 主内容区 */
.main-content {
  padding: 20rpx;
  background-color: #f8f9fa;
}

/* 公司列表滚动容器 */
.company-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 单个公司卡片 */
.company-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

/* 悬停或点击时放大效果 */
.company-item:hover {
  transform: scale(1.02);
}

.company-item:active {
  transform: scale(0.98);
}

/* 主要信息区域 */
.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

/* 公司名称 */
.company {
  font-size: 36rpx;
  font-weight: bold;
  color: rgb(53, 66, 184);
}

/* 详细信息（校友 & 地区） */
.details {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.alumni-name {
  color: #000000;
}

.divider {
  margin: 0 10rpx;
}

.company-region {
  color: #333;
}

/* 箭头图标 */
.arrow {
  font-size: 36rpx;
  color: rgba(8, 8, 8, 0.959);
}
