<view class="top-bar" style="height: 160rpx; display: flex; box-sizing: border-box">
  <image src="https://636c-cloud1-6gsqyvkd3f24bdd8-1311119192.tcb.qcloud.la/images/logo.png" class="logo"></image>
  <text class="top-title">校友查找</text>
</view>
  <!-- 搜索栏 -->
  <view class="search-bar">
    <view class="search-input-wrap">
      <icon type="search" size="16" color="#999"/>
      <input 
        class="search-input" 
        placeholder="搜索校友姓名、工作单位、职务" 
        value="{{searchValue}}"
        bindinput="onSearchInput"
        bindconfirm="onSearch"
      />
      <icon 
        wx:if="{{searchValue}}" 
        type="clear" 
        size="16" 
        color="#999" 
        bindtap="clearSearch"
      />
    </view>
  </view>

  <!-- 搜索历史 -->
  <view class="search-history" wx:if="{{!searchValue && searchHistory.length > 0}}">
    <view class="history-header">
      <text class="title">搜索历史</text>
      <text class="clear" bindtap="clearHistory">清空</text>
    </view>
    <view class="history-list">
      <view 
        class="history-item" 
        wx:for="{{searchHistory}}" 
        wx:key="*this"
        bindtap="onHistoryTap"
        data-keyword="{{item}}"
      >{{item}}</view>
    </view>
  </view>

  <!-- 搜索结果 -->
  <scroll-view 
    scroll-y 
    class="search-result" 
    wx:if="{{searchValue}}"
    bindscrolltolower="loadMore"
  >
    <view class="alumni-item" 
      wx:for="{{alumniList}}" 
      wx:key="id" 
      bindtap="showDetail" 
      data-id="{{item.id}}"
    >
      <view class="info">
        <view class="name">{{item.name}}</view>
        
        <view class="company">{{item.company}}</view>

        <view class="company">{{item.position}}</view>
      </view>
      <view class="arrow">></view>
    </view>

    <!-- 加载更多 -->
    <view class="loading" wx:if="{{loading}}">加载中...</view>
    <view class="no-more" wx:if="{{!hasMore && searchResults.length > 0}}">没有更多结果</view>
  </scroll-view>

  <!-- 无搜索结果 -->
  <view class="no-result" wx:if="{{searchValue && searchResults.length === 0}}">
    <image src="https://636c-cloud1-6gsqyvkd3f24bdd8-1311119192.tcb.qcloud.la/images/no-result.png" mode="aspectFit"></image>
    <text>未找到相关校友</text>
  </view>