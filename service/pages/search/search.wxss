.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.top-title {
  font-size: 20px;
  font-weight: bold;
  margin-top: 10px;
}

/* 搜索栏样式 */
.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
}

.search-input {
  flex: 1;
  margin: 0 16rpx;
  font-size: 28rpx;
  color: #333;
}

/* 搜索历史样式 */
.search-history {
  padding: 30rpx;
  background: #ffffff;
  margin-top: 20rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-header .title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.history-header .clear {
  font-size: 24rpx;
  color: #999;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.history-item {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
}

/* 搜索结果样式 */
.search-result {
  height: calc(100vh - 120rpx);
  padding: 20rpx;
}

.alumni-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.detail {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.company {
  font-size: 26rpx;
  color: #999;
}

.arrow {
  color: #999;
  font-size: 32rpx;
  margin-left: 20rpx;
}

/* 加载更多样式 */
.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 无搜索结果样式 */
.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.no-result image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.no-result text {
  font-size: 28rpx;
  color: #999;
}