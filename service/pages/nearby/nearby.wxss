.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.top-title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}
.map {
  width: 100%;
  height: 50vh;
}

.alumni-list {
  flex: 1;
  background: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: -20rpx;
  position: relative;
  z-index: 1;
}

.list-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.count {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}

.list-content {
  height: calc(50vh - 100rpx);
  padding: 0 30rpx;
}

.alumni-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.detail {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.distance {
  font-size: 24rpx;
  color: #999;
}

.company {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}