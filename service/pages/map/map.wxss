.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.top-title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

/* Map */
.map {
  width: 100%;
  height: 60vh;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

/* Unit list */
.unit-list {
  padding: 20rpx;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
}

.unit-items {
  margin-top: 15rpx;
}

.unit-item {
  background-color: #fff;
  margin-bottom: 15rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.unit-item text {
  font-size: 28rpx;
  color: #333333;
}
