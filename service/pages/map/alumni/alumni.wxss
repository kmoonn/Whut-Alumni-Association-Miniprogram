.alumni-list {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.alumni-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
}

.alumni-info {
  display: flex;
  gap: 24rpx;
}

.alumni-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.name {
  font-weight: bold;
  font-size: 32rpx;
}

.position {
  color: #666;
  font-size: 26rpx;
}

.tags {
  display: flex;
  gap: 12rpx;
  margin-top: 8rpx;
}
