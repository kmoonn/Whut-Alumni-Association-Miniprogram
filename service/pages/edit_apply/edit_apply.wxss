.required {
  color: red;
}

.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-top: 10px;
}

.header {
  display: flex;
  align-items: center;
  justify-content: center;
}

checkbox-group{
  display: flex;
  flex: auto;
  background-color: #f5f5f5;

}



.form {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}


.upload-text {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
}

.label {
  font-size: 28rpx;
  font-weight: bold;
  color: #444;
  margin-bottom: 10rpx;
}

.input {
  padding: 20rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.picker {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  color: #666;
}

.agreement {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.link {
  color: #007AFF;
}

.submit-btn {
  width: 60%;
  margin-top: 20rpx;
  border-radius: 8rpx;
  background-color: #007AFF;
  color: white;
  font-size: 40rpx;
  text-align: center;
}

.submit-btn:disabled {
  background-color: #ccc;
}

.checkbox-group {
  display: flex;
  flex-wrap: nowrap;   /* 不换行 */
  gap: 20rpx;          /* 选项间距 */
  margin-top: 10rpx;
  overflow-x: auto;    /* 超出屏幕可以水平滚动 */
}

.checkbox-label {
  display: flex;
  align-items: center;
  padding: 10rpx 15rpx;
  width: 150rpx;  
  border-radius: 8rpx;
  font-size: 2;
  color: #333;
  flex-shrink: 0;      /* 不自动缩小 */
}


.checkbox-label .wx-checkbox {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}



.long-content .content-container {
  white-space: pre-line;
}

.count {
  /* 基础样式 */
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  
  /* 水平居中（必选） */
  text-align: center;
  
  /* 垂直居中（可选，根据容器高度决定） */
  display: flex;
  align-items: center;
  justify-content: center;
  
  /* 增强视觉效果的可选样式 */
  background-color: #f8f8f8;
  border-radius: 12rpx;
  margin: 16rpx 0;
  padding: 16rpx 0;
}
