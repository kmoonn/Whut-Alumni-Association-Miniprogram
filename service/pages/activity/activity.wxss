.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}
/* 活动描述 */
.describe {
  font-size: 28rpx;
  color: #007aff; /* 链接颜色 */
  margin: 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  cursor: pointer; /* 鼠标样式 */
}

/* 活动图片 */
.image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  margin: 10rpx 0;
  background-size: cover;
  background-position: center;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

/* 活动日期 */
.date {
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
  border-top: 1px solid #eaeaea;
  padding-top: 10rpx;
}