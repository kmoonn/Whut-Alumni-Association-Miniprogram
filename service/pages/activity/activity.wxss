.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}
/* 整体布局样式 */

.main-content {
  padding: 30rpx;
  background: #f8f8f8;
  height: 100vh;
}

.activity-list {
  margin-top: 30rpx;
}

.activity-item {
  background: #ffffff;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.activity-item .title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.date-link {
  font-size: 24rpx;
  color: #666;
}

.describe {
  color: #007aff;
  text-decoration: underline;
}