.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.top-title {
  font-size: 16px;
  font-weight: bold;
  margin-top: 10px;
}

.chart-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.chart-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin: 20rpx;
  height: 650rpx;  /* 确保有足够的高度 */
}

.chart-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #1aad19;
}

ec-canvas {
  width: 100%;
  height: 100%;  /* 修改为100%以适应父容器 */
  display: block;
}