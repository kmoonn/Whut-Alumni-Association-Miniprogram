/* 顶部标题栏 */
.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

/* 前三名卡片特殊背景 */
.rank-card.top-three {
  background: linear-gradient(90deg, #FFD700, #FFFACD); /* 黄白渐变 */
}

/* 无数据提示 */
.no-data {
  text-align: center;
  color: #888;
  margin-top: 50rpx;
}

.rank-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 14rpx 26rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
}

/* 左侧信息 */
.rank-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.medal {
  width: 60rpx;
  height: 60rpx;
}
.rank-number {
  font-size: 36rpx;
  font-weight: 600;
  width: 60rpx;
  text-align: center;
  color: #666;
}
.rank-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

/* 右侧两项指标 */
.rank-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 28rpx;
  color: #888;
}

.stat-value {
  margin-top: 2rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #0052d9;
}
