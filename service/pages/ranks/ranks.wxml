<!-- 顶部栏 -->
<view class="top-bar">
  <text class="title">校友任务排行榜</text>
</view>

<view class="page">
  <scroll-view scroll-y class="rank-list">
  <block wx:for="{{rankings}}" wx:key="index">

    <view class="rank-card {{index < 3 ? 'top-three' : ''}}">

      <!-- 左侧：名次 + 姓名 -->
      <view class="rank-left">
        <block wx:if="{{index < 3}}">
          <image src="{{imageBaseUrl}}{{medals[index]}}" class="medal"/>
        </block>
        <block wx:else>
          <text class="rank-number">{{index + 1}}</text>
        </block>

        <text class="rank-name">{{item.nickname}}</text>
      </view>

      <view class="rank-stats">
        <view class="stat-item">
          <text class="stat-label">推荐校友数</text>
          <text class="stat-value">{{item.recommend_count}}</text>
        </view>

        <view class="stat-item">
          <text class="stat-label">确认校友数</text>
          <text class="stat-value">{{item.completed_count}}</text>
        </view>
      </view>

    </view>
  </block>

  <view wx:if="{{rankings.length === 0}}" class="no-data">
    暂无排行榜数据
  </view>
</scroll-view>

</view>
