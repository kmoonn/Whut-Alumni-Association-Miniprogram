/* 顶部标题栏 */
.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

/* 搜索区域 */
.search-section {
  display: flex;
  padding: 24rpx 32rpx;
  background: #ffffff;
  gap: 24rpx;
  border-bottom: 20rpx solid #f7f8fa;
}
.search-input {
  flex: 1;
  height: 72rpx;
  background: #f7f8fa;
  border-radius: 16rpx;
  padding-left: 24rpx;
  font-size: 28rpx;
  border: 1rpx solid #eee;
}
.search-btn {
  background: #0052d9;
  color: #fff;
  padding: 0 36rpx;
  border-radius: 16rpx;
  line-height: 72rpx;
  font-size: 28rpx;
}

/* 列表外层 */
.record-list {
  padding: 2rpx 2rpx;
  background: #f7f8fa;
}

/* 卡片 */
.record-card {
  background: #ffffff;
  padding: 32rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.05);
  transition: transform 0.15s;
}
.record-card:active {
  transform: scale(0.97);
}

/* 卡片顶部 */
.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.record-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
}

/* 状态标签 */
.tag {
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
}
.tag-yes {
  background: #3c9;
}
.tag-no {
  background: #e34;
}
.tag-unknown {
  background: #999;
}

/* 卡片内容 */
.record-body {
  font-size: 26rpx;
  color: #666;
  line-height: 40rpx;
}
.info {
  display: block;
  margin-bottom: 10rpx;
}
.date {
  font-size: 26rpx;
  color: #999;
}

/* 无数据 */
.no-data {
  text-align: center;
  color: #999;
  margin-top: 120rpx;
  font-size: 28rpx;
}

/* 加载与更多 */
.loading,
.no-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 26rpx;
}

.detail-dialog {
  border-radius: 12rpx;
  padding: 20rpx;
}

.detail-scroll {
  max-height: 60vh; /* 弹窗内滚动区域 */
}

.info-section {
  margin-bottom: 10rpx;
  background-color: #f9f9f9;
  padding: 15rpx;
  border-radius: 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 5rpx;
}

.columns {
  display: flex;
  flex-wrap: wrap;
}

.column-item {
  width: 100%; /* 两列布局 */
  margin-bottom: 10rpx;
}

.label {
  color: #666;
  margin-right: 5rpx;
}

.value {
  color: #333;
  font-weight: 500;
}

.no-source {
  color: #999;
  font-style: italic;
  padding: 10rpx 0;
}

.modify-section {
  margin-top: 20rpx;
}

.picker {
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 12rpx;
  margin-top: 10rpx;
}

.highlight {
  color: #1890ff;
  font-weight: 500;
}