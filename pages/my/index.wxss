/* 用户信息卡片 */
.user-card {
  background: #ffffff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}

.verify-status {
  font-size: 25rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.verify-status.verified {
  color: #1aad19;
  background: rgba(26, 173, 25, 0.1);
}

.user-stats {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-item .num {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.stat-item .label {
  font-size: 24rpx;
  color: #999;
}

/* 功能菜单 */
.menu-list {
  padding: 0 0rpx;
  width: 100%;
}

.menu-group {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item .icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.menu-item .title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-item .badge {
  font-size: 24rpx;
  color: #ffffff;
  background: #ff4d4f;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.menu-item .arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
} 