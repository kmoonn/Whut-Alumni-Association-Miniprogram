.top-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.top-title {
  font-size: 36rpx;
  font-weight: bold;
}

/* 页面容器 */
.container {
  background-color: #f5faff;
  min-height: 100vh;
  padding: 30rpx;
  font-family: 'Helvetica Neue', sans-serif;
}

/* 生成按钮 */
.btn-wrapper {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.gen-btn {
  background: linear-gradient(to right, #1e90ff, #63b3ed);
  color: white;
  font-size: 28rpx;
  padding: 18rpx 40rpx;
  border: none;
  border-radius: 50rpx;
  box-shadow: 0 6rpx 20rpx rgba(30, 144, 255, 0.4);
  transition: all 0.3s;
}

.gen-btn:active {
  transform: scale(0.96);
  opacity: 0.9;
}

.list-section {
  margin-top: 80rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 24rpx;
  border-left: 8rpx solid #1e90ff;
  padding-left: 20rpx;
}

.code-card {
  background-color: #fff;
  margin: 20rpx 30rpx;
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.code-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 邀请码样式 */
.code-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  word-break: break-all;
  max-width: 60%;
}

.action-group {
  display: flex;
  gap: 20rpx;
}

.del-btn {
  color: #f56c6c;
  font-size: 28rpx;
  padding: 8rpx 16rpx;
  border: 1rpx solid #f56c6c;
  border-radius: 8rpx;
}

.share-btn {
  color: #409eff;
  font-size: 28rpx;
  padding: 8rpx 16rpx;
  border: 1rpx solid #409eff;
  border-radius: 8rpx;
}


.date {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 弹窗遮罩层 */
.qr-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6); /* 半透明黑色背景 */
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

/* 弹窗内容容器 */
.qr-modal {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
  text-align: center;
  width: 500rpx;
  max-width: 90%;
}

/* 二维码图片 */
.qr-image {
  width: 300rpx;
  height: 500rpx;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
}

/* 提示文字 */
.qr-tip {
  display: block;
  color: #888;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

/* 关闭按钮 */
.close-btn {
  display: inline-block;
  margin-top: 10rpx;
  color: #007aff;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #007aff;
}



