/* 整体容器 */
.login-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh; /* 设定为视口高度 */
  padding: 0px;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明背景 */
  overflow: hidden; /* 防止内容超出并滚动 */
}

/* 背景图 */
.background-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

/* Logo容器 */
.logo-container {
  margin-bottom: 140px;
}

/* 输入框容器 */
.input-container {
  width: 100%;
  margin-bottom: 30px;
}

/* 登录按钮文字样式 */
.login-btn {
  display: flex;
  align-items: center;
  margin-bottom: 5px;
  font-size: 16px;
  color: #fff;
}

/* 输入框 */
input {
  width: 100%;
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #ffffff;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 14px;
}

/* 协议部分 */
.agreement {
  margin-top: 10px;
  margin-bottom: 20px;
  font-size: 14px;
  color: #fff;
}

/* 登录按钮 */
.submit-btn {
  width: 100%;
  padding: 12px;
  border-radius: 5px;
  background: linear-gradient(to right, #007aff, #1f74e4);
  color: white;
  font-size: 16px;
  text-align: center;
  border: none;
}

.submit-btn:active {
  background: linear-gradient(to right, #1f74e4, #007aff);
}

/* 协议复选框样式 */
.checkbox-group {
  display: flex;
  align-items: center;
}

.link {
  color: #1f74e4;
  text-decoration: underline;
}
