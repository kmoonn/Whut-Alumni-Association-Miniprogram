.top-bar {
  display: flex;
  padding: 15px 15px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 40px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

.swiper {
  width: 100%;
  height: 200px; /* 视具体需求调整 */
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* 通用section样式 */
.section {
  background: #ffffff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: #1aad19;
  border-radius: 3rpx;
}

.more {
  font-size: 24rpx;
  color: #999;
}

/* 校友动态 */
.news-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.news-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.news-item:last-child {
  border-bottom: none;
}

.news-image {
  width: 200rpx;
  height: 120rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.news-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.news-date {
  font-size: 24rpx;
  color: #999;
}

/* 活动信息 */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-time {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 100rpx;
}

.activity-time .day {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

.activity-time .month {
  font-size: 24rpx;
  color: #999;
}

.activity-info {
  flex: 1;
}

.text-wrapper {
  flex: 1; /* 文字区域占据剩余空间 */
  max-width: calc(100% - 170rpx); /* 为图片预留空间（图片宽度+间距） */
}

.activity-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  text-overflow: ellipsis;
  display: -webkit-box;  
  -webkit-line-clamp: 2;
}

/* taskModal.wxss */
.task-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  background-color: #fff;
  border-radius: 12rpx;
  width: 80%;
  max-width: 750rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 30rpx rgba(0, 0, 0, 0.15);
}

/* 标题区域样式 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  cursor: pointer;
}

/* 内容区域样式 */
.modal-body {
  padding: 30rpx 40rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.task-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-name {
  display:flex;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.task-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 进度条样式 */
.progress-container {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.progress-bg {
  flex: 1;
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-bar {
  height: 100%;
  background-color: #409EFF;
  border-radius: 6rpx;
  transition: width 0.5s ease; 
}

.task-header {
  display: flex;              /* 开启Flex布局 */
  align-items: center;        /* 垂直居中 */
  gap: 8rpx;                  /* 名称与按钮间距 */
  width: 100%;                /* 撑满父容器宽度 */
}
.progress-text {
  font-size: 24rpx;
  color: #666;
  min-width: 40rpx;
  text-align: right;
}

/* 按钮样式 */
.task-btn {
  display: flex;
  margin-top: 20rpx;
  padding: 1rpx 0;
  width: fit-content;
  font-size: 15rpx;
  color: #409EFF;
  background-color: transparent;
  border: 1rpx solid #409EFF;
}

/* 底部按钮区域样式 */
.modal-footer {
  display: flex;
  padding: 20rpx 40rpx;
  border-top: 1rpx solid #f5f5f5;
  gap: 20rpx;
}

.primary-btn, .cancel-btn {
  flex: 1;
  padding: 24rpx 0;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.primary-btn {
  background-color: #409EFF;
  color: #fff;
  border: none;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  border: none;
}

/* 动画样式 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.animate-fade-in {
  animation: fadeIn 0.3s ease forwards;
}


