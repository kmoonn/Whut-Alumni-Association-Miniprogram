.top-bar {
  display: flex;
  padding: 15px 25px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 40px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

.swiper {
  width: 100%;
  height: 200px; /* 视具体需求调整 */
}

.slide-image {
  width: 100%;
  height: 100%;
}

.menu {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 10px 0;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 5px;
}

.menu-item image {
  width: 50px;
  height: 50px;
}

.menu-item text {
  margin-top: 5px;
  font-size: 14px;
}