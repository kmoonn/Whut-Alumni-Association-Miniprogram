.profile-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 50rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.nickname {
  font-size: 36rpx;
  margin-top: 20rpx;
}

.menu {
  width: 90%;
  margin-top: 50rpx;
}

.menu-item {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  color: white;
  background: #007bff;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  margin-bottom: 20rpx;
}
