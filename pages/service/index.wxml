<view class="top-bar">
  <image src="https://636c-cloud1-6gsqyvkd3f24bdd8-1311119192.tcb.qcloud.la/images/logo.png" class="logo"></image>
  <text class="title">服务</text>
</view>

<view class="container">
  <view class="service-grid">
    <view class="service-item" wx:for="{{visibleServiceList}}" wx:key="path" bindtap="navigateTo" data-path="{{item.path}}">
      <image class="service-icon" src="{{item.icon}}" mode="aspectFit"></image>
      <text class="service-name">{{item.name}}</text>
    </view>
  </view>
</view>
