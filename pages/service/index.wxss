.top-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.top-title {
  font-size: 36rpx;
  font-weight: bold;
}

.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
  width: 100%;
}

.service-grid {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  padding: 10rpx 0;
}

.service-item {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
  aspect-ratio: 1;
}

.service-item:active {
  transform: scale(0.98);
  background: #f8f8f8;
}

.service-icon {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 30rpx;
}

.service-name {
  font-size: 28rpx;
  color: #000000;
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
} 