.top-bar {
  display: flex;
  padding: 15px 25px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 40px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

.container {
  padding: 25rpx;
  background-color: #ffffff;
  min-height: 50vh;
}

.service-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.service-item {
  width: 100%;
  margin-bottom: 32rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 16rpx;
  transition: transform 0.2s;
}

.service-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 32rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.service-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 5rpx;
}

.service-name {
  font-size: 30rpx;
  color: #333;
  text-align: center;
  font-weight: 500;
}
