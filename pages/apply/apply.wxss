.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 21%;
  padding: 0px;
}

.top-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 120rpx;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  padding: 20rpx;
}
.logo {
  width: 500rpx;
  height: 80rpx;
  margin-right: 10rpx;
}

.banner {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.form {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar-section {
  text-align: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #eee;
}

.upload-text {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.label {
  font-size: 28rpx;
  font-weight: bold;
  color: #444;
  margin-bottom: 10rpx;
}

.input {
  padding: 20rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.picker {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  color: #666;
}

.agreement {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.link {
  color: #007AFF;
}

.submit-btn {
  width: 100%;
  padding: 20rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
  background-color: #007AFF;
  color: white;
  font-size: 30rpx;
  text-align: center;
}

.submit-btn:disabled {
  background-color: #ccc;
}
