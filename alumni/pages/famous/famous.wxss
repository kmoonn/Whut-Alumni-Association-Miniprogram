.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-top: 10px;
}


.position {
  color: #333;
  width: 50%;
  display: -webkit-box;      /* 必须：创建弹性伸缩盒子 */
  -webkit-box-orient: vertical; /* 必须：设置子元素垂直排列 */
  -webkit-line-clamp: 2;     /* 最多显示两行 */
  overflow: hidden;          /* 超出部分隐藏 */
  text-overflow: ellipsis;   /* 超出部分用省略号表示 */
  line-height: 1.2em;        /* 行高，用于计算容器高度 */
  max-height: 2.4em;         /* 最大高度 = 行高 × 2 */
}


.company {
  color: #007AFF;
  width: 60%; 
  line-height: 1.2em;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 最多显示两行 */
  margin-right: 8%;
}

/* 外层内容容器 */
.main-content {
  padding: 20rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
}

.alumni-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.alumni-item {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 3rpx solid #e5e5e5;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: background-color 0.2s;
}

.alumni-item:active {
  background-color: #f0f0f0;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.details {
  font-size: 26rpx;
  color: #888888;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex-wrap: nowrap;
}

.position,
.company {
  white-space: normal;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4em;
  max-height: 2.8em;
  width: 100%;
}

.divider {
  margin: 0 10rpx;
  color: #cccccc;
}

.arrow {
  width: 40rpx;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow image {
  width: 100%;
  height: 100%;
}