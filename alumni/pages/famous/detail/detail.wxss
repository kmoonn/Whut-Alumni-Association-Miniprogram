.top-bar {
  background: linear-gradient(to right, #1d60dd, #285fb3);
  padding: 20rpx 30rpx;
  text-align: center;
}

.title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

.alumni-info {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  background-color: #f7f8fa;
}

/* 单个条目布局 */
.info-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 8rpx;
}

.value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
}
