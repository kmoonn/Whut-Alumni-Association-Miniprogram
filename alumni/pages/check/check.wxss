/* 顶部栏 */
.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-top: 10px;
}

/* 头部部分 */
.header {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-bottom: 1px solid #e0e0e0;
}

.count {
  font-size: 36rpx;
  color: #333;
  text-align: center;
}

.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh; /* 让整个页面高度填满屏幕 */
  background: linear-gradient(to bottom, #f6f9fc, #e0e9f0); /* 渐变背景色 */
  padding: 20px;
}

.empty-content {
  text-align: center;
  background-color: #ffffff; /* 背景为白色 */
  border-radius: 20px; /* 圆角 */
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1); /* 轻微的阴影 */
  padding: 40px;
  width: 80%; /* 确保内容区域宽度适应屏幕 */
  max-width: 600px; /* 最大宽度限制 */
}

.empty-text {
  font-size: 24px;
  color: #333333;
  margin-bottom: 30px;
  font-weight: bold;
}

.refresh-btn {
  background: linear-gradient(45deg, #4caf50, #81c784); /* 绿色渐变背景 */
  color: white;
  border: none;
  padding: 8px 16px;  /* 保持较小的内边距 */
  font-size: 16px;  /* 字体变小 */
  border-radius: 20px; /* 圆角 */
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  width: 100px; /* 直接设置固定宽度 */
  text-align: center; /* 确保文本居中 */
}

.refresh-btn:hover {
  transform: scale(1.05); /* 鼠标悬停时轻微放大 */
  background: linear-gradient(45deg, #388e3c, #66bb6a); /* 悬停时颜色变化 */
}

.refresh-btn:active {
  transform: scale(0.98); /* 点击时稍微缩小 */
}

/* 信息对比容器 */
.comparison-container {
  padding: 20rpx;
  background-color: #fff;
}

/* 每个信息区块 */
.info-comparison {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-section {
  width: 50%;
  background-color: #fafafa;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.card {
  display: flex;
  flex-direction: column;
}

.info {
  font-size: 28rpx;
  color: #555;
  margin-bottom: 18rpx;
}

.diff {
  color: #ff3300;
}

/* 来源信息 */
.source-info {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.link {
  display: flex;
  align-items: center;
}

/* 来源链接多行显示，最多2行，超出显示省略号 */
.info {
  display: -webkit-box;          
  -webkit-box-orient: vertical;  
  -webkit-line-clamp: 2;         
  overflow: hidden;           
  text-overflow: ellipsis;      
  word-break: break-all;      
}

.link-example {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  height: 96rpx;
  background-color: var(--bg-color-demo);
}


.navigator-hover {
  opacity: 0.7;
  background-color: #f0f0f0;
}

.info.diff {
  font-weight: bold;
}

/* 审核按钮区 */
.action-area {
  padding: 30rpx;
  background-color: #fff;
  border-top: 1px solid #e0e0e0;
}

.action-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  text-align: center;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
}

.reject-btn, .approve-btn, .middle-btn {
  width: 28%;
  padding: 12rpx;
  font-size: 30rpx;
  border-radius: 90rpx;
  cursor: pointer;
  border: none;
}

.reject-btn {
  background-color: #ff4d4d;
  color: #fff;
}

.middle-btn {
  background-color: #4c4e43;
  color: #fff;
}

.approve-btn {
  background-color: #4caf50;
  color: #fff;
}

/* 按钮交互效果 */
.reject-btn:hover, .approve-btn:hover {
  opacity: 0.8;
}
