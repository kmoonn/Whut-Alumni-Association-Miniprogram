/* 顶部栏 */
.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-top: 10px;
}

.header {
  display: flex;
  justify-content: center;       /* 横向居中 */
  align-items: center;           /* 垂直居中 */
  padding: 20rpx 0;              /* 可选：上下留点空间 */
}

.count {
  margin-right: 20rpx;           /* 控制图标和文字间距 */
}

.question-icon {
  width: 38rpx;
  height: 38rpx;
}


.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh; /* 让整个页面高度填满屏幕 */
  background: linear-gradient(to bottom, #f6f9fc, #e0e9f0); /* 渐变背景色 */
  padding: 20px;
}

.empty-content {
  text-align: center;
  background-color: #ffffff; /* 背景为白色 */
  border-radius: 20px; /* 圆角 */
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1); /* 轻微的阴影 */
  padding: 40px;
  width: 80%; /* 确保内容区域宽度适应屏幕 */
  max-width: 600px; /* 最大宽度限制 */
}

.empty-text {
  font-size: 14px;
  color: #ff3939;
  margin-bottom: 30px;
}

.refresh-btn {
  background: linear-gradient(45deg, #4caf50, #81c784); /* 绿色渐变背景 */
  color: white;
  border: none;
  padding: 8px 16px;  /* 保持较小的内边距 */
  font-size: 16px;  /* 字体变小 */
  border-radius: 20px; /* 圆角 */
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  width: 100px; /* 直接设置固定宽度 */
  text-align: center; /* 确保文本居中 */
}

.refresh-btn:hover {
  transform: scale(1.05); /* 鼠标悬停时轻微放大 */
  background: linear-gradient(45deg, #388e3c, #66bb6a); /* 悬停时颜色变化 */
}

.refresh-btn:active {
  transform: scale(0.98); /* 点击时稍微缩小 */
}

/* 信息对比容器 */
.comparison-container {
  padding: 5rpx;
  background-color: #fff;
}

/* 每个信息区块 */
.info-comparison {
  display: flex;
  justify-content: space-between;
  margin-bottom: 25rpx;
}


.info-section-pending {
  flex:1;
  background-color: #f9f6ef;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}
.info-section-source {
  flex:1;
  background-color: #d9e1eb;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.card {
  display: flex;
  flex-direction: column;
}

.info {
  font-size: 26rpx;
  color: rgb(0, 0, 0);
  margin-bottom: 30rpx;
  white-space: normal;
  word-break: break-word;
}

.diff {
  color: #ff3300;
}

/* 来源信息 */
.source-info {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.link {
  display: flex;
  align-items: center;
}

.link-example {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  height: 96rpx;
  background-color: var(--bg-color-demo);
}

.navigator-hover {
  opacity: 0.7;
  background-color: #f0f0f0;
}

.info.diff {
  font-weight: bold;
}

/* 审核按钮区 */
.action-area {
  padding: 30rpx;
  background-color: #fff;
  border-top: 1px solid #e0e0e0;
}

.action-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  text-align: center;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
}

.reject-btn, .approve-btn, .middle-btn {
  width: 28%;
  padding: 12rpx;
  font-size: 30rpx;
  border-radius: 90rpx;
  cursor: pointer;
  border: none;
}

.reject-btn {
  background-color: #ff4d4d;
  color: #fff;
}

.middle-btn {
  background-color: #4c4e43;
  color: #fff;
}

.approve-btn {
  background-color: #4caf50;
  color: #fff;
}

/* 按钮交互效果 */
.reject-btn:hover, .approve-btn:hover {
  opacity: 0.8;
}
