.container {
  padding: 40rpx 30rpx;
  background: linear-gradient(to bottom right, #e6f0ff, #f9fbff);
  min-height: 100vh;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  color: #0a3d62;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  text-align: center;
  color: #1e90ff;
  margin-bottom: 40rpx;
}

.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.checkbox-item {
  width: 48%;
  background-color: #ffffff;
  border: 2rpx solid #cce0ff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 85, 170, 0.05);
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  transition: all 0.2s ease-in-out;
}

.checkbox-item:active {
  transform: scale(0.98);
}

.checkbox {
  transform: scale(0.8);
  margin-right: 20rpx;
}

.checkbox-text {
  font-size: 24rpx;
  color: #0a3d62;
}

.btn-wrapper {
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
}

.confirm-btn {
  width: 60%;
  background: linear-gradient(to right, #1e90ff, #007aff);
  color: white;
  font-size: 32rpx;
  padding: 16rpx 0;
  border: none;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 122, 255, 0.2);
  transition: background 0.3s ease;
}

.confirm-btn[disabled] {
  background: #b0c4de;
  color: #eee;
  box-shadow: none;
}