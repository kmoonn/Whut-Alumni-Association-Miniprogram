.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}
.category {
  margin-top: 10%;
}

.alumnus-info text {
  display: flex; 
  margin-bottom: 10px;
  padding-right: 5%;
  padding-left: 10%;
  max-width: 90%; /* 确保内容不超过右侧区域 */
}

.alumnus-info text[data-label]::before {
  content: attr(data-label);
  width: 30%;
  color: #007AFF;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  text-align: left;
  flex-shrink: 0; /* 防止标签被压缩 */
}

