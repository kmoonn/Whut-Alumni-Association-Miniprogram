.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}


.alumnus-info {
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.category {
  margin-top: 20%;
}

.alumnus-info text {
  display: block;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  padding-left: 32px;
  padding-right: 32px;
  color: #333;
}

.alumnus-info text[data-label]::before {
  content: attr(data-label);
  display: inline-block;
  width: 160rpx;
  color: #666;
  font-size: 28rpx;
  margin-right: 24rpx;
  margin-bottom: 16rpx;
  text-align: left;
}