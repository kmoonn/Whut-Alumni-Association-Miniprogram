/* 顶部栏 */
.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

/* 头部部分 */
.header {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-bottom: 1px solid #e0e0e0;
}

.count {
  font-size: 36rpx;
  color: #333;
  text-align: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  background-color: #fff;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 30rpx;
}

.refresh-btn {
  background-color: #0066cc;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  cursor: pointer;
}

/* 信息对比容器 */
.comparison-container {
  padding: 20rpx;
  background-color: #fff;
}

/* 每个信息区块 */
.info-comparison {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-section {
  width: 50%;
  background-color: #fafafa;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.card {
  display: flex;
  flex-direction: column;
}

.info {
  font-size: 28rpx;
  color: #555;
  margin-bottom: 18rpx;
}

.diff {
  color: #ff3300; 
}

/* 来源信息 */
.source-info {
  padding: 30rpx;
  background-color: #f9f9f9;
}
/* 来源链接多行显示，最多2行，超出显示省略号 */
.info {
  display: -webkit-box;          
  -webkit-box-orient: vertical;  
  -webkit-line-clamp: 2;         
  overflow: hidden;           
  text-overflow: ellipsis;      
  word-break: break-all;      
}

.navigator-hover {
  opacity: 0.7;
  background-color: #f0f0f0;
}

.info.diff {
  font-weight: bold;
}

/* 审核按钮区 */
.action-area {
  padding: 20rpx;
  background-color: #fff;
  border-top: 1px solid #e0e0e0;
}

.action-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  text-align: center;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
}

.reject-btn, .approve-btn {
  width: 48%;
  padding: 12rpx;
  font-size: 30rpx;
  border-radius: 90rpx;
  cursor: pointer;
  border: none;
}

.reject-btn {
  background-color: #ff4d4d;
  color: #fff;
}

.approve-btn {
  background-color: #4caf50;
  color: #fff;
}

/* 按钮交互效果 */
.reject-btn:hover, .approve-btn:hover {
  opacity: 0.8;
}
