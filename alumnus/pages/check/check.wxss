.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

/* 审核数量 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  padding: 20rpx;
}

.badge {
  background: red;
  color: white;
  font-weight: bold;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
}

/* 信息对比容器 */
.comparison-container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  gap: 20rpx;
}

/* 信息区域 */
.info-section {
  width: 100%;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #007bff;
}

/* 校友卡片 */
.card {
  background: #fff;
  padding: 40rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  text-align: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 校友信息 */
.name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.info {
  font-size: 32rpx;
  color: rgb(34, 96, 211);
  margin: 10rpx 0;
  word-break: break-word;
}

/* 按钮组 */
.button-group {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
  padding: 20rpx;
}

button {
  font-size: 36rpx;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-weight: bold;
  width: 45%;
}

.approve {
  background: #4caf50;
  color: white;
}

.reject {
  background: #f44336;
  color: white;
}
