<view class="top-bar" style="height: 160rpx; display: flex; box-sizing: border-box">
  <image src="https://636c-cloud1-6gsqyvkd3f24bdd8-1311119192.tcb.qcloud.la/images/logo.png" class="logo"></image>
  <text class="title">校友审核</text>
</view>

<!-- 右上角显示剩余待审核数量 -->
<view class="header">
  <text>待审核数：</text>
  <text class="badge">{{pendingCount}}</text>
</view>

<!-- 信息对比区域 -->
<view class="comparison-container">
  <!-- 校友库源信息 -->
  <view class="info-section">
    <view class="section-title">校友库源信息</view>
    <view class="card">
      <text class="name">{{sourceInfo.name}}</text>
      <text class="info">性别: {{sourceInfo.gender}}</text>
      <text class="info">出生日期: {{sourceInfo.birthday}}</text>
      <text class="info">毕业年份: {{sourceInfo.graduation_year}}</text>
      <text class="info">学院: {{sourceInfo.department}}</text>
      <text class="info">专业: {{sourceInfo.major}}</text>
      <text class="info">所在地: {{sourceInfo.region}}</text>
      <text class="info">工作单位: {{sourceInfo.company}}</text>
      <text class="info">职务: {{sourceInfo.position}}</text>
    </view>
  </view>

  <!-- 待审核信息 -->
  <view class="info-section">
    <view class="section-title">疑似校友信息</view>
    <view class="card">
      <text class="name">{{pendingInfo.name}}</text>
      <text class="info">性别: {{pendingInfo.gender}}</text>
      <text class="info">出生日期: {{pendingInfo.birthday}}</text>
      <text class="info">毕业年份: {{pendingInfo.graduation_year}}</text>
      <text class="info">专业: {{pendingInfo.major}}</text>
      <text class="info">所在地: {{pendingInfo.region}}</text>
      <text class="info">工作单位: {{pendingInfo.company}}</text>
      <text class="info">职务: {{pendingInfo.position}}</text>
      <text class="info">信息来源: {{pendingInfo.source}}</text>
    </view>
  </view>
</view>

<!-- 底部按钮 -->
<view class="button-group">
  <button class="reject" bindtap="rejectMatch">❌ 信息不匹配</button>
  <button class="approve" bindtap="approveMatch">✅ 信息匹配</button>
</view>
