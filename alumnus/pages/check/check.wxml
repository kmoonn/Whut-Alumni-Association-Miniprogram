<view class="top-bar" style="height: 160rpx; display: flex; box-sizing: border-box">
  <image src="https://636c-cloud1-6gsqyvkd3f24bdd8-1311119192.tcb.qcloud.la/images/logo.png" class="logo"></image>
  <text class="title">校友审核</text>
</view>

<!-- 右上角显示剩余待审核数量 -->
<view class="header">
  <text>待审核数：</text>
  <text class="badge">{{pendingCount}}</text>
</view>

<!-- 信息对比区域 -->
<view class="comparison-container">
  <!-- 校友库信息 -->
  <view class="info-section">
    <view class="section-title">校友库信息</view>
    <view class="card">
      <text class="name">{{alumniInfo.name}}</text>
      <text class="info">性别: {{alumniInfo.gender}}</text>
      <text class="info">出生日期: {{alumniInfo.birthday}}</text>
      <text class="info">毕业年份: {{alumniInfo.graduate_year}}</text>
      <text class="info">学院: {{alumniInfo.college}}</text>
      <text class="info">专业: {{alumniInfo.major}}</text>
      <text class="info">所在地: {{alumniInfo.region}}</text>
      <text class="info">工作单位: {{alumniInfo.company}}</text>
      <text class="info">职务: {{alumniInfo.position}}</text>
    </view>
  </view>

  <!-- 网上搜索信息 -->
  <view class="info-section">
    <view class="section-title">网上搜索信息</view>
    <view class="card">
      <text class="name">{{searchInfo.name}}</text>
      <text class="info">性别: {{searchInfo.gender}}</text>
      <text class="info">出生日期: {{searchInfo.birthday}}</text>
      <text class="info">毕业年份: {{searchInfo.graduate_year}}</text>
      <text class="info">学院: {{searchInfo.college}}</text>
      <text class="info">专业: {{searchInfo.major}}</text>
      <text class="info">所在地: {{searchInfo.region}}</text>
      <text class="info">工作单位: {{searchInfo.company}}</text>
      <text class="info">职务: {{searchInfo.position}}</text>
      <text class="info">信息来源: {{searchInfo.source}}</text>
    </view>
  </view>
</view>

<!-- 底部按钮 -->
<view class="button-group">
  <button class="reject" bindtap="rejectMatch">❌ 信息不匹配</button>
  <button class="approve" bindtap="approveMatch">✅ 信息匹配</button>
</view>
