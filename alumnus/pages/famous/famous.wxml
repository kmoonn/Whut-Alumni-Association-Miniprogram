<view class="top-bar" style="height: 160rpx; display: flex; box-sizing: border-box">
  <image src="https://636c-cloud1-6gsqyvkd3f24bdd8-1311119192.tcb.qcloud.la/images/logo.png" class="logo"></image>
  <text class="title">知名校友</text>
</view>

  <!-- 侧边栏 -->
  <view class="sidebar">
    <view 
      class="sidebar-item {{currentTab === 'politics' ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-tab="politics"
    >政界</view>
    <view 
      class="sidebar-item {{currentTab === 'business' ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-tab="business"
    >商界</view>
    <view 
      class="sidebar-item {{currentTab === 'academic' ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-tab="academic"
    >学界</view>
  </view>

  <!-- 主内容区 -->
  <view class="main-content">
    <scroll-view scroll-y class="alumni-list">
      <view class="alumni-item" 
        wx:for="{{alumniList}}" 
        wx:key="id" 
        bindtap="showDetail" 
        data-id="{{item.id}}"
      >
        <image class="avatar" src="{{item.avatar || '/images/default-avatar.png'}}" mode="aspectFill"></image>
        <view class="info">
          <view class="name">{{item.name}}</view>
          <view class="in-title">{{item.position}}</view>
          <view class="company">{{item.company}}</view>
        </view>
        <view class="arrow">></view>
      </view>
    </scroll-view>
  </view>
