.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

/* üîç Á≠õÈÄâÂÆπÂô® */
.filter-container {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.field-selector {
  height: 50rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  border: 2px solid #ccc;
  border-radius: 35rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100px;
}

.search-input {
  flex: 1;
  height: 50rpx;
  padding: 0 20rpx;
  border: 2px solid #ccc;
  border-radius: 35rpx;
  font-size: 32rpx;
  outline: none;
}

/* üìã Ë°®Ê†ºÂÆπÂô® */
.table-container {
  padding: 20rpx;
}

.table-header, .table-row {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
}

.table-cell {
  flex: 1;
  font-size: 20rpx;
  font-weight: bold;
  padding: 10rpx;
  text-align: center;
  background-color: #f9f9f9;
  border: 1px solid #ccc;
  border-radius: 8rpx;
}

.table-row {
  background-color: #fff;
}

.table-row .table-cell {
  font-weight: normal;
  background-color: transparent;
}

.table-cell:first-child {
  font-weight: bold;
}

.container {
  height: 100vh;
  display: flex;
  background: #f5f5f5;
}

/* ‰æßËæπÊ†èÊ†∑Âºè */
.sidebar {
  width: 160rpx;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  border-right: 1rpx solid #f0f0f0;
}

.sidebar-item {
  padding: 40rpx 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.sidebar-item.active {
  color: #007bff;
  font-weight: 500;
  background: #f8f9ff;
}

.sidebar-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 40rpx;
  background: #007bff;
  border-radius: 0 3rpx 3rpx 0;
}

/* ‰∏ªÂÜÖÂÆπÂå∫Ê†∑Âºè */
.main-content {
  flex: 1;
  overflow: hidden;
}

/* Ê†°ÂèãÂàóË°®Ê†∑Âºè */
.alumni-list {
  height: 100%;
  padding: 20rpx;
}

.alumni-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.in-title {
  font-size: 28rpx;
  color: #007bff;
  margin-bottom: 8rpx;
}

.company {
  font-size: 26rpx;
  color: #666;
}

.arrow {
  color: #999;
  font-size: 32rpx;
  margin-left: 20rpx;
}
