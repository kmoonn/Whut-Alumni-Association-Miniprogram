.top-bar {
  display: flex;
  padding: 15px 13px;
  background: linear-gradient(to right, #0056b3, #007bff);
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.logo {
  width: 250px;
  height: 50px;
  margin-right: 30px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

/* üîç Á≠õÈÄâÂÆπÂô® */
.filter-container {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.field-selector {
  height: 50rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  border: 2px solid #ccc;
  border-radius: 35rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100px;
}

.search-input {
  flex: 1;
  height: 50rpx;
  padding: 0 20rpx;
  border: 2px solid #ccc;
  border-radius: 35rpx;
  font-size: 32rpx;
  outline: none;
}

/* üìã Ë°®Ê†ºÂÆπÂô® */
.table-container {
  padding: 20rpx;
}

.table-header, .table-row {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
}

.table-cell {
  flex: 1;
  font-size: 20rpx;
  font-weight: bold;
  padding: 10rpx;
  text-align: center;
  background-color: #f9f9f9;
  border: 1px solid #ccc;
  border-radius: 8rpx;
}

.table-row {
  background-color: #fff;
}

.table-row .table-cell {
  font-weight: normal;
  background-color: transparent;
}

.table-cell:first-child {
  font-weight: bold;
}
